@{
    ViewBag.Title = "Country Index";
}


@* Markup removed for brevity *@

<span />
<span />
<span />
<span />



        @if (Model.Count == 0)
        {
                    
            <h4>No Country Items</h4>

        }
        else
        {
            <div class="row">
                @foreach (var country in Model)
                {

                <div class="col-sm-6 col-md-4">
                     <div class="thumbnail">
                    
                        <img alt="@country.CountryName"  src="@Url.Content("~/images/"+country.ImageUrl)" />
                        <div class="label label-material-green-900 "> @country.CountryName</div>
                    
                         <a href="/Country/Edit/@country.Id" class="btn btn-material-green-900 btn-fab btn-flat btn-raised mdi-content-create "></a>
                         <a href="/Country/Delete/@country.Id" class="btn btn-material-green-900 btn-fab btn-flat btn-raised mdi-content-clear "></a>
 
                    </div>
               </div>
                           
               }
           </div>
        }


        <a class="btn btn-material-green-900 btn-fab btn-flat btn-raised mdi-content-add" href="/Country/Create/"> </a>
            

 

<script type="text/javascript">
		$(document).ready(function()
		{

		    $.material.init()

		});
</script>