@{
    ViewBag.Title = "Country Index";
}


@* Markup removed for brevity *@


        @if (Model.Count == 0)
        {
                    
            <h4>No Country Items</h4>

        }
        else
        {
           
            <div class="row">
                @foreach (var country in Model)
                {

                <div class="col-sm-4 col-md-4">
                     <div class="thumbnail">
                    
                        <img alt="@country.CountryName"  src="@Url.Content("~/images/"+country.ImageUrl)" />
                        <div class="label label-default label-material-teal-500 "> @country.CountryName</div>
                    
                         <a href="/Country/Edit/@country.Id" class="btn btn-xs btn-sm btn-material-teal-500 btn-fab btn-flat btn-raised mdi-content-create "></a>
                         <a href="/Country/Delete/@country.Id" class="btn btn-xs btn-material-teal-500 btn-fab btn-flat btn-raised mdi-content-clear "></a>
                         <a href="/Country/Create/" class=" btn btn-xs btn-material-teal-500 btn-fab btn-flat btn-raised mdi-content-add" > </a>

                    </div>
               </div>
                           
               }
           </div>
        }


           

 

