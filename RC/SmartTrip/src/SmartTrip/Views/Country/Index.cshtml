@{
    ViewBag.Title = "Country Index";
}


@* Markup removed for brevity *@

<span />
<span />
<span />
<span />


        <div class="list-group">
            <div class="list-group-item">


        @if (Model.Count == 0)
        {
                    <div class="row-content">
                        <h4>No Country Items</h4>
                    </div>
        }
        else
        {

               @foreach (var country in Model)
                {
                       

                        <div class="row-picture">
                          
                                <img alt="@country.CountryName" class="circle" src="@Url.Content("~/images/"+country.ImageUrl)" />
                          
                                <div class="label  label-material-green-900 ">@country.CountryName</div>
                        </div>
                        <div class="row-content">
                           
                           
                            <div class="btn btn-material-green-900"> @Html.ActionLink("Edit", "Edit", "Country", new { id = country.Id })</div> 
                            <div class="btn btn-material-green-900">
                                @Html.ActionLink("Delete", "Delete", "Country", new { id = country.Id }) </div>

                          
                       </div>
                    <div class="list-group-separator"></div>
               }

        }


                <div class="btn btn-material-green-900">@Html.ActionLink("Create", "Create", "Country") </div>
            </div>


        </div>


 

<script type="text/javascript">
		$(document).ready(function()
		{

		    $.material.init()

		});
</script>