@model SmartTrip.Models.CountryViewModel
    
@{
    ViewBag.Title = "Create a Country";
}


@using (Html.BeginForm("Create", "Country", FormMethod.Post, new { enctype = "multipart/form-data" , @class ="form-horizontal" }))
{
    @Html.AntiForgeryToken();
   

   <fieldset> 
    <div class="form-group">
        
        @Html.TextBoxFor(x => x.Country.CountryName,new { @class="form-control", placeholder = "Country Name" })
    </div>


    <div class="form-group">
      
        @Html.TextBoxFor(x => x.Country.ImageUrl, new { @class = "form-control", placeholder = "Image Url" })
    </div>


    <div class="form-group">

        <input type="file" name="file" id="file1" class="form-control" placeholder = "Image File" />
    </div>


    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-material-blue-900" />
    </div>
  </fieldset>

}