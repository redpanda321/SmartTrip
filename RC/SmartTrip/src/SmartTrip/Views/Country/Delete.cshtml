@model SmartTrip.Models.Country

@{
    ViewBag.Title = "Delete a country";
}


   
    @using (Html.BeginForm( new {@class="form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <div class="form-group">


                <div class="col-sm-4 col-md-4">
                    <div class="thumbnail">

                        <img alt="@Model.CountryName" src="@Url.Content("~/images/"+Model.ImageUrl)" />
                        <div class="label label-default label-material-teal-500 "> @Model.CountryName </div>
                       
                    </div>
                    <input type="submit" value="Delete" class="btn btn-flat btn-raised btn-material-teal-500" />

                </div>

            </div>
        </fieldset>
    }
    
