@model SmartTrip.Models.TripViewModel
    
@{
    ViewBag.Title = "Trip - Select  StartTime";
    
}


   
@using (Html.BeginForm("TripStartTime", "Trip",  FormMethod.Post,new{ @class="form-horizontal"}))
{

   
        @Html.AntiForgeryToken();
   

         <div class="form-group input-group-sm">

            
            @Html.TextBoxFor(x => x.Trip.StartTime, new{ placeholder="Select start date", @class="form-control foating-label", @id = "startDate", @type = "text" })
       </div>

<div class="form-group">

    <input type="submit" name="btnNext" value="next" class="btn btn-material-teal-500" />
</div>
}



<script type="text/javascript">
		$(document).ready(function()
		{
			$('#startDate').bootstrapMaterialDatePicker
			({
			    date: "true",
                format:"YYYY-MM-DD",
				time: false
			});
			
		
			
		});
</script>


