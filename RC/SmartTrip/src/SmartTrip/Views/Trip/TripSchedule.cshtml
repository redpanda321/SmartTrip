@{
    ViewBag.Title = "Trip Schedule";
}

<div class="jumbotron">
    <h1>Schedule</h1>
</div>
@* Markup removed for brevity *@
<div class="row">
    <div class="col-md-4">
        @if (Model.Count == 0)
        {
            <h4>No Schedule Items</h4>
        }
        else
        {
            <table>
                <tr><th>Trip</th><th></th></tr>
                @foreach (var schedule in Model)
                {
                    <tr>
                        <td>@schedule.ScheduleName </td>
                        <td>
                            @Html.ActionLink("Detail", "TripScheduleInfo", "Trip", new { id = schedule.Id }) 
                           
                        </td>
                    </tr>
                }
            </table>
        }
        
    </div>

    
</div>