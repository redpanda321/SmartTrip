@{
    ViewBag.Title = "Trip Schedule";
}


        @if (Model.Count == 0)
        {
            <h4>No Schedule Items</h4>
        }
        else
        {
            <div class="row">
                <div class="col-lg-4">
                    <div class="list-group">
                        @foreach (var schedule in Model)
                {

                           
                                <div class="list-group-item">
                                    <a  href="/Trip/TripScheduleInfo/@schedule.Id">
                                        <div class="row-picture">
                                            <h3 >   @schedule.ScheduleName </h3>
                                        </div>

                                        <div class="row-content ">
                                            <h4 >@schedule.StrCities</h4>
                                            <h4>@schedule.StrSceneries</h4>
                                        </div>
                                    </a>
                                 </div>
                                
                            
                            <div class="list-group-separator"></div>
                        }

                    </div>
                </div>
            </div>
        }
        
   