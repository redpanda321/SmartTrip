@model SmartTrip.Models.TripViewModel
    
@{
    ViewBag.Title = "Trip - Select Cities";
    
}
   

@using (Html.BeginForm("TripCity", "Trip",  FormMethod.Post, new { enctype = "multipart/form-data" }))
{
        @Html.AntiForgeryToken();


    <div class="row" id="TripCity">

            @for (int i = 0; i < Model.Cities.Count; i++)
            {

                <div class="col-sm-3 col-md-3">
                    @Html.HiddenFor(x => x.CheckedCities[i].CityId)
                    <img title=@Model.Cities[i].CityName src=@Url.Content("~/images/"+Model.Cities[i].ImageUrl) width="260" />



                    <div class="checkbox checkbox-material-teal-500">
                        <label>
                            @Html.CheckBoxFor(x => x.CheckedCities[i].Checked, new { id = Model.Cities[i].Id })
                        </label>
                    </div>
                </div>

            }



    </div>

        <input type="submit" name="btnNext" value="next" class="btn btn-material-teal-500" />
}




<script type="text/javascript">
		$(document).ready(function()
		{

		    $.material.init()
		    
		});
</script>