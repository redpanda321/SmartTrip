@{
    ViewBag.Title = "City Index";
}

@if (Model.Count == 0)
{

    <h4>No City Items</h4>

}
else
{

    <div class="row">
        @foreach (var city in Model)
                {

            <div class="col-sm-4 col-md-4">
                <div class="thumbnail">

                    <img alt="@city.CityName" src="@Url.Content("~/images/"+city.ImageUrl)" />
                    <div class="label label-default label-material-green-900 "> @city.CityName</div>

                    <a href="/City/Edit/@city.Id" class="btn btn-xs btn-sm btn-material-green-900 btn-fab btn-flat btn-raised mdi-content-create "></a>
                    <a href="/City/Delete/@city.Id" class="btn btn-xs btn-material-green-900 btn-fab btn-flat btn-raised mdi-content-clear "></a>
                    <a href="/City/Create/" class=" btn btn-xs btn-material-green-900 btn-fab btn-flat btn-raised mdi-content-add"> </a>

                </div>
            </div>

        }
    </div>
}

