@model SmartTrip.Models.CityViewModel
    
@{
    ViewBag.Title = "Create a City";
    
}
   

@using (Html.BeginForm("Create","City",  FormMethod.Post, new { enctype = "multipart/form-data",@class="form-horizontal"}))
{
        @Html.AntiForgeryToken();

        <div class="form-group">
           
            @Html.TextBoxFor(x => x.City.CityName, new { @class = "form-control", placeholder = "City Name" })
        </div>

       
        <div class="form-group">
            
            @Html.TextBoxFor(x => x.City.Summary,new { @class = "form-control", placeholder = "City Summary" })
        </div>

        <div class="form-group">
         
            @Html.DropDownListFor(x => x.City.CountryId, Model.Countries, new { @class = "form-control", placeholder = "Select Country" })
        </div>

        <div class="form-group">
            <input type="text" readonly="" class="form-control floating-label" placeholder="Browse image..." />
            <input type="file" name="file" id="file1" />
        </div>

        
        <input type="submit" value="Create" class="btn btn-flat btn-raised btn-material-green-900" />
}
