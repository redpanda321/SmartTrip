@model SmartTrip.Models.CityViewModel
    
@{
    ViewBag.Title = "Create a City";
    
}
   

@using (Html.BeginForm("Create","City",  FormMethod.Post, new { enctype = "multipart/form-data" }))
{
        @Html.AntiForgeryToken();

        <div class="form-group">
            @Html.LabelFor(x => x.City.CityName)
            @Html.EditorFor(x => x.City.CityName)
        </div>

       
        <div class="form-group">
            @Html.LabelFor(x => x.City.ImageUrl)
            @Html.EditorFor(x => x.City.ImageUrl)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.City.Summary)
            @Html.EditorFor(x => x.City.Summary)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.City.CountryId)
            @Html.DropDownListFor(x => x.City.CountryId, Model.Countries)
        </div>

        <div class="form-group">

            <input type="file" name="file" id="file1" />
        </div>

        
        <input type="submit" value="submit" class="btn btn-default" />
}
