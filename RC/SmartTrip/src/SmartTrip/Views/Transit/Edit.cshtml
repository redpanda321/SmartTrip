@model SmartTrip.Models.TransitViewModel

@{
    ViewBag.Title = "Edit a Transit";
}

@using (Html.BeginForm("Edit","Transit",FormMethod.Post,new {@class="form-horizontal" }))
{
   @Html.AntiForgeryToken();

    <div class="form-group">

        @Html.TextBoxFor(x => x.Transit.TransitName, new { @class = "form-control" })
    </div>

        <div class="form-group">

            @Html.DropDownListFor(x => x.Transit.TransitType, Model.TransitTypes, new { @class = "form-control" })
        </div>

        <div class="form-group">

            @Html.TextBoxFor(x => x.Transit.TransitNumber, new { @class = "form-control" })
        </div>

        <div class="form-group">

            @Html.DropDownListFor(x => x.Transit.StartingCity, Model.Cities, new { @class = "form-control" })
        </div>

        <div class="form-group">

            @Html.DropDownListFor(x => x.Transit.DestinationCity, Model.Cities, new { @class = "form-control" })
        </div>

        <div class="form-group">

            @Html.TextBoxFor(x => x.Transit.StartTime, new { @class = "form-control" })
        </div>

        <div class="form-group">

            @Html.TextBoxFor(x => x.Transit.EndTime, new { @class = "form-control" })
        </div>

        <div class="form-group">

            @Html.TextBoxFor(x => x.Transit.Price, new { @class = "form-control" })
        </div>

        <div class="form-group">

            @Html.DropDownListFor(x => x.Transit.Currency, Model.Currencies, new { @class = "form-control" })
        </div>

        <div class="form-group">

            @Html.TextBoxFor(x => x.Transit.Amount, new { @class = "form-control" })
        </div>

        <div class="form-group">

            @Html.TextBoxFor(x => x.Transit.Memo, new { @class = "form-control" })
        </div>



        <input type="submit" value="Create" class="btn btn-flat btn-raised btn-material-teal-500" />
}

