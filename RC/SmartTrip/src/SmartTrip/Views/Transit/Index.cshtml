@{
    ViewBag.Title = "Transit Index";
}


@if (Model.Count == 0)
{

    <h4>No City Items</h4>
    <a href="/Transit/Create/" class=" btn btn-xs btn-material-teal-500 btn-fab btn-flat btn-raised mdi-content-add"> </a>


}
else
{

    <div class="row">
        @foreach (var transit in Model)
                {

            <div class="col-sm-4 col-md-4">
                <div class="thumbnail">
                   <div class="btn btn-flat btn-raised btn-material-teal-500 "> @transit.TransitName</div>

                    <a href="/Transit/Edit/@transit.Id" class="btn btn-xs btn-sm btn-material-teal-500 btn-fab btn-flat btn-raised mdi-content-create "></a>
                    <a href="/Transit/Delete/@transit.Id" class="btn btn-xs btn-material-teal-500 btn-fab btn-flat btn-raised mdi-content-clear "></a>
                    <a href="/Transit/Create/" class=" btn btn-xs btn-material-teal-500 btn-fab btn-flat btn-raised mdi-content-add"> </a>

                </div>
            </div>

        }
    </div>
}
